# Copy this file to .env.local and fill in your values

# Email Service
NEXT_PUBLIC_MAILCHIMP_URL=https://your-mailchimp-endpoint.com
NEXT_PUBLIC_EMAIL_API_KEY=your-email-api-key

# Payment/Download Service
NEXT_PUBLIC_DOWNLOAD_BASE_URL=https://your-download-service.com
PAYMENT_SECRET_KEY=your-payment-secret-key

# Stripe Payment Integration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for order confirmations)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@palettehaus.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME=Palette Haus

# Instagram Integration
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
NEXT_PUBLIC_INSTAGRAM_FEED_URL=https://api.instagram.com/v1/feed

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX